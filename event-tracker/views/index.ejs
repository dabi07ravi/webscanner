<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert New Event</title>
</head>
<body>
    <form action="http://localhost:3000/api/event/insert-new-event" method="post">
        <label for="url">URL:</label>
        <input type="text" name="url" required><br><br>

        <label for="fields">Fields (comma separated):</label>
        <input type="text" name="fields" required><br><br>

        <button type="submit">Submit</button>
    </form>
    
    <% if (typeof message !== 'undefined') { %>
        <p><%= message %></p>
    <% } %>
</body>
</html>
